@model Phat_Blogger_Website.ViewModels.RegisterViewModel

@{

}

<body class="align">

    <div class="grid">

        <form asp-controller="Auth" asp-action="Register" method="post" class="form login" enctype="multipart/form-data">

            <div class="form__field">
                <label for="register__username"><svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg><span class="hidden">Username</span></label>
                <input asp-for="@Model.Email" id="email" type="text" name="email" class="form__input" placeholder="Username" required>
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form__field">
                <label for="register__password"><svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg><span class="hidden">Password</span></label>
                <input asp-for="@Model.Password" id="register__password" type="password" name="password" class="form__input" placeholder="Password" required>
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form__field">
                <label for="register__confirmpassword"><svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg><span class="hidden">Confirm Password</span></label>
                <input asp-for="@Model.ConfirmPassword" id="register__confirmpassword" type="password" name="confirmpassword" class="form__input" placeholder="Confirm Password" required>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <div class="form__field">
                <label for="register__firstname"><svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12.01" y2="8"></line></svg><span class="hidden">First Name</span></label>
                <input asp-for="@Model.FirstName" id="firstname" type="text" name="firstname" class="form__input" placeholder="First Name" required>
                <span asp-validation-for="FirstName"></span>
            </div>

            <div class="form__field">
                <label for="register__lastname"><svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12.01" y2="8"></line></svg><span class="hidden">Last Name</span></label>
                <input asp-for="@Model.LastName" id="lastname" type="text" name="lastname" class="form__input" placeholder="Last Name" required>
                <span asp-validation-for="LastName"></span>
            </div>

            <div class="form__field">
                <label for="register__address"><svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12.01" y2="8"></line></svg><span class="hidden">Address</span></label>
                <input asp-for="@Model.Address" id="address" type="text" name="address" class="form__input" placeholder="Address" required>
                <span asp-validation-for="Address"></span>
            </div>

            <div class="form__field">
                <label for="register__dob"><svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12.01" y2="8"></line></svg><span class="hidden">Date of birth</span></label>
                <input asp-for="@Model.DoB" id="dob" type="date" name="dob" class="form__input" placeholder="Date of birth" required>
                <span asp-validation-for="DoB"></span>
            </div>

            <div class="form__field">
                <label for="register__phonenumber"><svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12.01" y2="8"></line></svg><span class="hidden">Phone Number</span></label>
                <input asp-for="@Model.PhoneNumber" id="phonenumber" name="phonenumber" class="form__input" placeholder="Phone number" required>
                <span asp-validation-for="PhoneNumber"></span>
            </div>

            <div class="form__field">
                <label for="register__gender"><svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg><span class="hidden">Male or female</span></label>
                <input asp-for="@Model.Gender" id="gender" type="checkbox" name="gender" class="form__input">
            </div>

            <div class="form__field">
                <label for="register__avatar"><svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><g transform="translate(2 3)"><path d="M20 16a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V5c0-1.1.9-2 2-2h3l2-3h6l2 3h3a2 2 0 0 1 2 2v11z" /><circle cx="10" cy="10" r="4" /></g></svg><span class="hidden">Image</span></label>
                <input asp-for="@Model.CurrentImage" type="hidden" />
                <input style="padding-top: 1.5rem;" asp-for="@Model.Avatar" id="avatar" name="avatar" class="form__input">
            </div>

            <div class="form__field">
                <input type="submit" value="Sign Up">
            </div>

        </form>

        <p class="text--center">Already have an account? <a asp-controller="Auth" asp-action="Login">Sign in</a></p>

    </div>
</body>
@section Scripts{
    <script>
        $(document).ready(function () {
            $("#gender").change(function () {
                if ($(this).prop("checked")) {
                    $(this).val(true);
                }
                else {
                    $(this).val(false);
                }
            });
        });
    </script>
}

